{
  "name": "quara",
  "version": "0.10.1",
  "description": "Query as Sara.",
  "license": "CC BY-ND 4.0",
  "keywords": [
    "quara",
    "language"
  ],
  "author": {
    "name": "Bernardo A. Siverio",
    "email": "berthewanderer@gmail.com",
    "url": "https://github.com/wandeber"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "type": "module",
  "main": "./dist/Quara.cjs.js",
  "module": "./dist/Quara.esm.js",
  "exports": {
    "import": "./dist/Quara.js",
    "require": "./dist/Quara.cjs.js"
  },
  "scripts": {
    "start": "bun run rebuild && bun run shell",
    "start-dev": "bun run --watch ./src/shell.ts",
    "shell": "bun run ./dist/Quara.shell.js",
    "build": "bun run ./build.js",
    "build-prod": "bun run clean; bun run build && bun run check",
    "rebuild": "bun run clean; bun run build",
    "check": "bun run test && bun run lint",
    "test": "bun test --coverage",
    "lint": "bunx eslint ./**/*.ts",
    "clean": "rm -r ./dist",
    "preversion": "bun run check",
    "format": "bunx prettier --write .",
    "check-format": "bunx prettier --check ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "bun run check"
    }
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "bun-types": "^1.0.1",
    "esbuild": "^0.19.2",
    "eslint": "^8.49.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^4.3.8",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  }
}