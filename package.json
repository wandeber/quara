{
  "name": "quara",
  "version": "0.4.2",
  "description": "Query as Sara.",
  "license": "ISC",
  "keywords": [
    "query",
    "interpreter",
    "language",
    "sql",
    "database",
    "filter"
  ],
  "author": "Bernardo A. Siverio (wandeber)",
  "main": "index.js",
  "scripts": {
    "start": "npm run rebuild && npm run shell",
    "shell": "node ./dist/shell.js",
    "rebuild": "npm run clean && npm run build",
    "build": "npm run build-tsc && npm run licence && npm run check",
    "build-prod": "npm run build-webpack && npm run licence && npm run check",
    "preversion": "npm run check",
    "check": "npm test && npm run lint",
    "clean": "rm -r ./dist",
    "licence": "cp -f ./LICENSE ./dist/",
    "build-tsc": "./node_modules/.bin/tsc",
    "build-webpack": "./node_modules/.bin/webpack --mode production",
    "lint": "./node_modules/.bin/eslint ./**/*.ts",
    "test": "./node_modules/.bin/jest --detectOpenHandles --forceExit --coverage --verbose"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check"
    }
  },
  "engines": {
    "node": ">=16.13.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.6.0",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "ts-jest": "^26.2.0",
    "ts-loader": "^8.0.2",
    "typescript": "^3.9.7",
    "webpack": "^5.64.4",
    "webpack-cli": "^4.9.1"
  }
}
