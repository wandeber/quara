{
  "name": "@wandeber/quara",
  "version": "0.10.3",
  "description": "Query as Sara.",
  "license": "CC BY-ND 4.0",
  "keywords": [
    "quara",
    "language"
  ],
  "author": {
    "name": "Bernardo A. Siverio",
    "email": "berthewanderer@gmail.com",
    "url": "https://github.com/wandeber"
  },
  "homepage": "https://github.com/wandeber/quara",
  "repository": {
    "type": "git",
    "url": "https://github.com/wandeber/quara"
  },
  "bugs": {
    "url": "https://github.com/wandeber/quara/issues"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "type": "module",
  "main": "./dist/Quara.cjs.js",
  "module": "./dist/Quara.esm.js",
  "exports": {
    "import": "./dist/Quara.js",
    "require": "./dist/Quara.cjs.js"
  },
  "scripts": {
    "start": "npm run rebuild && npm run shell",
    "start-dev": "ts-node-dev --respawn ./src/shell.ts",
    "shell": "node ./dist/Quara.shell.js",
    "rebuild": "npm run clean; npm run build",
    "build": "npm run build-esbuild",
    "build-prod": "npm run clean; npm run build-esbuild && npm run check",
    "preversion": "npm run check",
    "check": "npm test && npm run lint",
    "clean": "rm -r ./dist",
    "build-esbuild": "node build.js",
    "test": "./node_modules/.bin/jest --detectOpenHandles --forceExit --coverage",
    "test-verbose": "npm run test -- --verbose",
    "lint": "npx eslint ./**/*.ts",
    "format": "npx prettier --write .",
    "check-format": "npx prettier --check .",
    "gen-dist-npm": "./scripts/generate-dist-npm.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check"
    }
  },
  "engines": {
    "node": ">=18.17.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "esbuild": "^0.20.2",
    "eslint": "^8.49.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^4.3.8",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}