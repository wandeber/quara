{
  "name": "quara",
  "version": "0.9.0",
  "description": "Query as Sara.",
  "license": "ISC",
  "keywords": [
    "query",
    "interpreter",
    "language",
    "sql",
    "database",
    "filter"
  ],
  "author": "Bernardo A. Siverio (wandeber)",
  "main": "index.js",
  "scripts": {
    "start": "npm run rebuild && npm run shell",
    "start-dev": "ts-node-dev --respawn --transpile-only ./src/shell.ts",
    "shell": "node ./dist/shell.js",
    "rebuild": "npm run clean; npm run build",
    "build": "npm run build-tsc",
    "build-prod": "npm run build-webpack && npm run licence && npm run readme && npm run check",
    "preversion": "npm run check",
    "check": "npm test && npm run lint",
    "clean": "rm -r ./dist",
    "licence": "cp -f ./LICENSE ./dist/",
    "readme": "cp -f ./README.md ./dist/",
    "build-tsc": "./node_modules/.bin/tsc",
    "build-webpack": "./node_modules/.bin/webpack --mode production",
    "lint": "./node_modules/.bin/eslint ./**/*.ts",
    "test": "./node_modules/.bin/jest --detectOpenHandles --forceExit --coverage",
    "test-verbose": "npm run test -- --verbose",
    "format": "prettier --write .",
    "check-format": "prettier --check ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check"
    }
  },
  "engines": {
    "node": ">=16.13.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/node": "^16.18.44",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^4.2.5",
    "jest": "^29.6.3",
    "node": "^16.20.2",
    "prettier": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-loader": "^8.0.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5",
    "webpack": "^5.64.4",
    "webpack-cli": "^4.9.1"
  }
}
